#!/bin/bash

# Minikube management script for aws101-kubernetes course
# Compatible with Kubernetes 1.34

set -euo pipefail

show_help() {
    echo "ğŸš€ Minikube Management Script for aws101-kubernetes"
    echo ""
    echo "Usage: ./minikube [COMMAND]"
    echo ""
    echo "Commands:"
    echo "  start    Start minikube cluster with course configuration"
    echo "  stop     Stop minikube cluster"
    echo "  help     Show this help message"
    echo ""
    echo "Examples:"
    echo "  ./minikube start    # Start cluster"
    echo "  ./minikube stop     # Stop cluster"
    echo "  ./minikube help     # Show help"
}

start_minikube() {
    echo "ğŸš€ Starting Minikube cluster for aws101-kubernetes..."

    # Check if minikube is installed
    if ! command -v minikube &> /dev/null; then
        echo "âš ï¸  Minikube not found. Installing minikube..."

        # Detect OS and architecture
        OS=$(uname -s | tr '[:upper:]' '[:lower:]')
        ARCH=$(uname -m)

        case $ARCH in
            x86_64) ARCH="amd64" ;;
            arm64|aarch64) ARCH="arm64" ;;
            *) echo "âŒ Unsupported architecture: $ARCH"; exit 1 ;;
        esac

        # Download and install minikube
        MINIKUBE_URL="https://storage.googleapis.com/minikube/releases/latest/minikube-${OS}-${ARCH}"

        echo "ğŸ“¥ Downloading minikube for ${OS}-${ARCH}..."
        if curl -Lo minikube "$MINIKUBE_URL"; then
            chmod +x minikube
            sudo mv minikube /usr/local/bin/
            echo "âœ… Minikube installed successfully!"
        else
            echo "âŒ Failed to download minikube"
            exit 1
        fi
    else
        echo "âœ… Minikube is already installed ($(minikube version --short))"
    fi

    # Start minikube with specific configuration
    if minikube start \
      --kubernetes-version=v1.34.0 \
      --driver=docker \
      --cpus=2 \
      --memory=4096 \
      --disk-size=20g \
      --addons=ingress,dashboard,metrics-server; then
      echo "âœ… Minikube cluster started successfully!"
    else
      echo "âŒ Failed to start Minikube cluster"
      exit 1
    fi

    # Enable required addons
    echo "ğŸ”§ Enabling additional addons..."
    minikube addons enable ingress-dns
    minikube addons enable storage-provisioner

    # Display cluster info
    echo "ğŸ“Š Cluster Information:"
    kubectl cluster-info
    kubectl get nodes

    echo "ğŸ¯ Ready to run aws101-kubernetes exercises!"
    echo "ğŸ’¡ Use 'kubectl get namespaces' to see available namespaces"
    echo "ğŸŒ Access dashboard with: minikube dashboard"
}

stop_minikube() {
    echo "ğŸ›‘ Stopping Minikube cluster..."

    if minikube stop; then
      echo "âœ… Minikube cluster stopped successfully!"
    else
      echo "âŒ Failed to stop Minikube cluster"
      exit 1
    fi

    echo "ğŸ’¡ Use './minikube start' to start again"
}

# Main script logic
case "${1:-help}" in
    start)
        start_minikube
        ;;
    stop)
        stop_minikube
        ;;
    help|--help|-h)
        show_help
        ;;
    *)
        echo "âŒ Unknown command: $1"
        echo ""
        show_help
        exit 1
        ;;
esac
